// .devcontainer/devcontainer.json
// This file configures the GitHub Codespace environment.
{
  "name": "Vault Tactical Edge Demo",

  // Use a pre-built 'universal' image from Microsoft.
  // It includes Docker, Docker Compose, Node.js, and many other common tools,
  // which simplifies our setup significantly and is more robust.
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  "features": {
    // This feature ensures the Docker daemon is running inside our Codespace.
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  // Forward the ports for the web GUI and the Vault UI.
  "forwardPorts": [8080, 8200],
  "portsAttributes": {
    "8080": {
      "label": "Demo GUI",
      "onAutoForward": "openBrowserWhenReady"
    },
    "8200": {
      "label": "Vault UI"
    }
  },

  // This command runs after the Codespace is created.
  // It starts all services with Docker Compose, waits for Vault to initialize,
  // and then runs the setup script.
  "postCreateCommand": "docker compose -f ./.devcontainer/docker-compose.yml up -d && sleep 10 && bash ./.devcontainer/setup-vault.sh",

  // A setting to prevent the container from exiting after the postCreateCommand.
  "overrideCommand": false
}
